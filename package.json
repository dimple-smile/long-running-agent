{
  "name": "@dimples/lra",
  "version": "1.2.0",
  "description": "CLI tool for managing long-running AI agent projects across multiple sessions. Track features, progress, and state persistence.",
  "type": "module",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "lra": "./dist/cli.mjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pkgroll --minify",
    "dev": "pkgroll --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run build",
    "lint": "eslint src/"
  },
  "keywords": [
    "ai",
    "agent",
    "claude",
    "claude-code",
    "llm",
    "project-management",
    "multi-session",
    "cli",
    "feature-tracking",
    "long-running",
    "autonomous-coding"
  ],
  "author": "dimple-smile",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimple-smile/long-running-agent.git"
  },
  "bugs": {
    "url": "https://github.com/dimple-smile/long-running-agent/issues"
  },
  "homepage": "https://github.com/dimple-smile/long-running-agent#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^14.0.3",
    "conf": "^15.1.0",
    "nanospinner": "^1.2.2",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@vitest/coverage-v8": "^4.0.18",
    "pkgroll": "^2.25.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "publishConfig": {
    "access": "public"
  }
}
